%h1
  #{@query}'s followers

%p
  = @follower_details

%p
  - if current_user
    = simple_form_for @search_item do |f|
      = f.hidden_field :user_id
      = f.hidden_field :query
      = f.simple_fields_for :search_results do |r|
        = r.hidden_field :twitter_id_number
        = r.hidden_field :twitter_screen_name
      = f.submit "Save your search"
  - else
    Sign-in to save your search history
